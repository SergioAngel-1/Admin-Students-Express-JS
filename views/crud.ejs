<h2>Lista de Alumnos</h2>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Edad</th>
      <th>Curso</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% alumnos.forEach(alumno => { %>
    <tr>
      <td><%= alumno.id %></td>
      <td><%= alumno.nombre %></td>
      <td><%= alumno.apellido %></td>
      <td><%= alumno.edad %></td>
      <td><%= alumno.curso %></td>
      <td>
        <a
          href="/editar/<%= alumno.id %>"
          class="btn btn-sm btn-warning"
          title="Editar"
        >
          <i class="fas fa-edit"></i>
        </a>
        <a
          href="/eliminar/<%= alumno.id %>"
          class="btn btn-sm btn-danger"
          onclick="return confirm('¿Estás seguro de que quieres eliminar este alumno?')"
          title="Eliminar"
        >
          <i class="fas fa-trash-alt"></i>
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<a href="/agregar" class="btn btn-primary">
  <i class="fas fa-plus"></i> Agregar Alumno
</a>
